{
  "manifest_version": 2,

  "name": "OAS Console",
  "description": "This extension toggles OAS console",
  "version": "0.1",

  "browser_action": {
      "default_icon": "data/icons/icon19-disable.png",
      "default_title": "Toggle OAS Console",
      "default_popup": "data/popup/popup.html"
  },
  "icons": {
      "48": "data/icons/icon48-chrome.png"
  },
  "background": {
      "scripts": [
          "config.js",
          "background.js"
      ]
  },
  "permissions": [
      "tabs",
      "storage",
      "webRequest",
      "webRequestBlocking",
      "http://*/*",
      "https://*/*"
  ]
}