#!/bin/bash

stop_docker() {
  # stop only per-site container
  docker stop mwn-${SITE_NAME}
}

kill_docker_containers() {
  # stop and remove all currently running containers
  docker stop $(docker ps -aq)
  docker rm $(docker ps -aq)

  if [ $PLATFORM == "osx" ]; then
    docker-machine stop default 2>/dev/null
  else
    sudo docker-machine stop default 2>/dev/null
  fi
}
