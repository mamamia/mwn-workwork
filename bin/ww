#!/bin/bash

# Exit immediately if a command exits with a non-zero status
set -e

# Enables pattern lists like @(init|start|updatedb)
# Credit: http://stackoverflow.com/a/13254908
shopt -s extglob

# Load in functions
WW_DIR="${HOME}/workspace/mwn-workwork"
cd $WW_DIR
source ./lib/vars
source ./lib/utils
source ./lib/display
source ./lib/workstation
source ./lib/init
source ./lib/start
source ./lib/updatedb
source ./lib/run

check_version
check_shell
check_platform

case "$1" in
  $VALID_WW_COMMANDS)
    case "$2" in
      $VALID_ARGUMENTS)
        setup_site $2
        run_$1 $2
        ;;
      $INVALID_ARGUMENTS)
        display_status_primary "ERROR" "Invalid or missing argument"
        display_ww_help
        ;;
    esac
    ;;
  --help)
    display_ww_help
    ;;
  --version)
    display_version
    ;;
  --workstation)
    run_workstation
    ;;
  *)
    case "$2" in
      *)
        display_status_primary "ERROR" "Invalid command '$1'"
        display_ww_help
        ;;
      esac
    ;;
esac
